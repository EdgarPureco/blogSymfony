{% extends 'base.html.twig' %}

{% block body %}
   {% apply inline_css(source("styles/games.css")) %}


<div class="example-wrapper">
    <h1>Liste des jeux videos</h1>
    <br>


  <div class="panel">
    <div class="panel-heading" >
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <h3>Filtrer par :</h3>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle filtre" style="color: black;" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Jeux
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {% for plateforme in plateformesRepository.findAll %}
              <li><a class="dropdown-item" href="#">{{ plateforme.name }}</a></li>
            {% endfor %}
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle filtre" style="color: black;" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Genre
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {% for genre in genresRepository.findAll %}
              <li><a class="dropdown-item" href="#">{{ genre.name }}</a></li>
            {% endfor %}
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
    </div>
    <div class="panel-body"></div>
     <div>
    <h1 style="text-align:center">Listing des Produits</h1>
     <div>
        {% for game in games %}
            <div class="card">
                  <img src="{{ game.photo }}" style="width:100%" />
                  
                    <h2>{{ game.title }}</h2>
                     <p class="price">{{ game.synopsis }} euros</p>
     
            </div>
        {% endfor %}
    </div>
</div>





    

      
</div>
  

  </div>
  
</div>
{% endapply %}
{% endblock %}
