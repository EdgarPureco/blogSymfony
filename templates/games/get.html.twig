{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
   {% apply inline_css(source("styles/games.css")) %}

<form>
 <input type="button" value="Go back!" onclick="history.back()">
</form>

<div class="panel">
    <h1>{{game.title}}</h1>
    <br class="brtitre">
    <h3>{{game.plateforme}}</h3>
    </div>
</div>

  <div class="card">

                <span class="spanphoto">
                Bande annonce : 
                <br>
                <iframe  width="420" height="315" src="{{game.video}}" allowfullscreen="" frameborder="0"></iframe>
                <br class="brtitre">
                <button><a  href="{{ path('games_video') }}">Vidéo test  <i class="fa fa-play-circle"></i> </button>
                </span>
                
                <span class="spancontenu">
                    <span>Synopsis : </span>
                    {{ game.synopsis }}
                    <br>
                    <br>
                    <span>Sortie : </span>
                    le {{ game.year.format('d/m/Y')}}
                    <br>
                    <span>Développeur : </span>
                    {{ game.developer }}
                   <br>
                    <span>Genre : </span>
                    {{ game.genre }}
                   <br>
                </span> 
            </div>

{% endapply %}
{% endblock %}
