{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
   {% apply inline_css(source("styles/games.css")) %}



<div class="panel">
    <h1>{{game.title}}</h1>
    <br class="brtitre">
    <table class="table">
  <thead>
    <tr>
    {% for plateforme in game.plateforme %}
    <th scope="col">{{plateforme}}</th>
    {% endfor %}
    </tr>
  </thead>
</table>
    </div>
</div>
<br>
  <div class="card" id="content" >
               <span class="spanphoto">
               <img src="{{ game.photo }}"/>
                <br class="brtitre">
                <button> <a href="#trailer">Bande annonce  <i class="fa fa-play-circle"></i> </button>
                <br class="brtitre">
                <button> <a href="#images">Images  <i class="fa fa-image"></i> </button>
                <br class="brtitre">
                <button> <a href="#actus">Actus  <i class="fa fa-newspaper-o"></i> </button>
                </span>
                
                <span class="spancontenu">
                    <span>Synopsis : </span>
                    {{ game.synopsis }}
                    <br>
                    <br>
                    <span>Sortie : </span>
                    le {{ game.year.format('d/m/Y')}}
                    <br>
                    <span>Développeur : </span>
                    {{ game.developer }}
                   <br>
                    <span>Genre : </span>
                    {{ game.genre }}
                   <br>
                </span> 
            </div>

    <br>

    <div class=" card video" id="trailer" >
     <span class="spancontenu">
      <h1>La bande annonce officiel </h1>
      <br>
      <iframe width="560" height="315" src="{{game.video}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></span>
    </div>

    <br class="brtitre">



    <div class="card" id="images" >
      <span class="spancontenu">
     <h1>Les dernières images</h1>
     <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="{{ game.photo }}" style="width:100%;">
      </div>

      <div class="item">
        <img src="{{ game.photo }}" style="width:100%;">
      </div>
    
      <div class="item">
        <img src="{{ game.photo }}" style="width:100%;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
      </span>
    </div>
    



    <br class="brtitre">
     <div class="card" id="actus" >
     <span class="spancontenu">
     <h1>Les dernières actus</h1>
      </span>
    </div>

    <br class="brtitre">
    <br class="brtitre">
<div class="fixed-bottom" style="margin: 20px;">
  <button class="btn btn-primary float-start buttonback"> <a href="{{ path('games_index')}}"><i class="fa fa-arrow-circle-left"></i> Retour à la liste </button>
  <button class="btn btn-primary float-end buttonback"> <a href="#">Haut  <i class="fa fa-arrow-circle-up"></i> </button>
</div>
    
 
  
{% endapply %}
{% endblock %}
